{#
  status-messages.html.twig
  Bootstrap 5 alerts for Drupal status messages.
  Types: status -> success, warning -> warning, error -> danger
#}
{% if message_list %}
  <div class="mi-status-messages">
    {% for type, messages in message_list %}
      {% set bs_type = {
        'status': 'success',
        'warning': 'warning',
        'error': 'danger'
      }[type]|default('info') %}

      <div aria-label="{{ 'Message'|t }}"
           class="alert alert-{{ bs_type }} alert-dismissible fade show"
           role="alert">
        {% if status_headings[type] %}
          <h2 class="visually-hidden">{{ status_headings[type] }}</h2>
        {% endif %}

        {% if messages|length > 1 %}
          <ul class="mb-0">
            {% for message in messages %}
              <li>{{ message }}</li>
            {% endfor %}
          </ul>
        {% else %}
          {{ messages|first }}
        {% endif %}

        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="{{ 'Close'|t }}"></button>
      </div>
    {% endfor %}
  </div>
{% endif %}
