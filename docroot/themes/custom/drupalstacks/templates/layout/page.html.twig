{#
  Minimal page.html.twig override
  Goal:
    - Print the "highlighted" region (your custom callouts), letting region--highlighted.html.twig decide wrappers.
    - Print the "messages" region (Status messages block) ABOVE content, only when it exists.
    - Avoid adding extra wrappers/colors here; let region templates control visuals.
#}

{# Header #}
{% if page.header %}
  {{ page.header }}
{% endif %}

{# Primary menu #}
{% if page.primary_menu %}
  {{ page.primary_menu }}
{% endif %}

{# Highlighted region (no wrapper here; region template handles it) #}
{% if page.highlighted %}
  {{ page.highlighted }}
{% endif %}

{# Status messages region (no wrapper here; region--messages handles it and only renders when non-empty) #}
{% if page.messages %}
  {{ page.messages }}
{% endif %}

{# Breadcrumb (optional) #}
{% if breadcrumb %}
  {{ breadcrumb }}
{% endif %}

{# Main content area #}
<main role="main" class="container my-3">
  <a id="main-content" tabindex="-1"></a>

  <div class="row">
    {# Sidebar first #}
    {% if page.sidebar_first %}
      <aside class="col-md-3" role="complementary">
        {{ page.sidebar_first }}
      </aside>
    {% endif %}

    <section class="{% if page.sidebar_first and page.sidebar_second %}col-md-6{% elseif page.sidebar_first or page.sidebar_second %}col-md-9{% else %}col-12{% endif %}" role="region" aria-label="{{ 'Content'|t }}">
      {{ page.content }}
    </section>

    {# Sidebar second #}
    {% if page.sidebar_second %}
      <aside class="col-md-3" role="complementary">
        {{ page.sidebar_second }}
      </aside>
    {% endif %}
  </div>
</main>

{# Footer #}
{% if page.footer %}
  {{ page.footer }}
{% endif %}
