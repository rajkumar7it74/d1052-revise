{#
/**
 * @file
 * Theme override for a views mini-pager.
 *
 * Available variables:
 * - heading_id: Pagination heading ID.
 * - pagination_heading_level: The heading level to use for the pager.
 * - items: List of pager items.
 *
 * @see template_preprocess_views_mini_pager()
 */
#}

{% if items.pages or items.previous or items.next %}
  <nav class="pager d-flex justify-content-center my-3" role="navigation" aria-labelledby="{{ heading_id }}">
    <{{ pagination_heading_level }} id="{{ heading_id }}" class="visually-hidden">
      {{ 'Pagination'|t }}
    </{{ pagination_heading_level }}>

    <ul class="pagination">

      {# Previous page link #}
      {% if items.previous %}
        {% apply spaceless %}
          <li class="page-item">
            <a href="{{ items.previous.href }}"
               class="page-link"
               title="{{ 'Go to previous page'|t }}"
               rel="prev"
               aria-label="{{ 'Previous page'|t }}"
               {{ items.previous.attributes|without('href', 'title',.5.5 0 0 1-.708.708l-6-6a.5.5 0 0 1 0-.708l6-6a.5.5 0 0 1 .708 0z"/>
              </svg>
              <span class="visually-hidden">{{ 'Previous page'|t }}</span>
            </a>
          </li>
        {% endapply %}
      {% endif %}

      {# Numbered pages #}
      {% for key, page in items.pages %}
        {% if page.current %}
          <li class="page-item active" aria-current="page">
            <span class="page-link">
              {{ page.text }}
              <span class="visually-hidden">{{ 'Current page'|t }}</span>
            </span>
          </li>
        {% else %}
          <li class="page-item">
            <a href="{{ page.href }}"
               class="page-link"
               title="{{ 'Go to page @number'|t({'@number': page.text}) }}"
               aria-label="{{ 'Page @number'|t({'@number': page.text}) }}"
               {{ page.attributes|without('href', 'titleext.href }}"
               class="page-link"
               title="{{ 'Go to next page'|t }}"
               rel="next"
               aria-label="{{ 'Next page'|t }}"
               {{ items.next.attributes|without('href 0l6 6a.5.5 0 0 1 0 .708l-6 6a.5.5 0 0 1-.708-.708L10.293 8 4.646 2.354a.5.5 0 0 1 0-.708z"/>
              </svg>
              <span class="visually-hidden">{{ 'Next page'|t }}</span>
            </a>
          </li>
        {% endapply %}
      {% endif %}

    </ul>
  </nav>
{% endif %}
